<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- default -->
    <item android:state_pressed="false" android:state_focused="false" android:state_selected="false">
        
                
        <shape >
            <solid
                	
                    android:color="#000000" />
            
            <stroke 
                	android:width="1dp" 
                	android:color="#808080" 
                	android:dashWidth="1dp" 
                	android:dashGap="2dp" />
            <corners
                	android:bottomLeftRadius="12dp"
                    android:topRightRadius="12dp"
                    android:topLeftRadius="12dp"
                    android:bottomRightRadius="12dp"/>
            
        </shape>
    </item>

    
    <!-- pressed -->
    <item android:state_pressed="true" android:state_focused="false">
        <shape >
            <gradient android:startColor="#000030" android:endColor="#000090"  android:angle="-90.0"/>
            
           
            
            <corners
                    android:bottomLeftRadius="12dp"
                    android:topRightRadius="12dp"
                    android:topLeftRadius="12dp"
                    android:bottomRightRadius="12dp"/>
           
        </shape>
    </item>

    <!-- selected -->
    <item android:state_pressed="false" android:state_selected="true">
        <shape >
            <gradient android:startColor="#ffff90" android:endColor="#ffff30"  android:angle="-90.0"/>
            
           
            <corners
                    android:bottomLeftRadius="12dp"
                    android:topRightRadius="12dp"
                    android:topLeftRadius="12dp"
                    android:bottomRightRadius="12dp"/>
            
        </shape>
    </item>
</selector>