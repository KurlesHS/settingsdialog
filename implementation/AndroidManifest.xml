<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.horrorsoft.viotimer"

          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="6"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application android:theme="@style/Theme.Sherlock.NoActionBar" android:label="@string/application_name" android:icon="@drawable/ic_launcher">
        <activity android:name="MyActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- активити для диалога выбора файла. Поменять при возможности :) -->
        <activity android:screenOrientation="landscape" android:label="@string/app_name" android:name="com.lamerman.FileDialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingActivity"
                  android:label="Settings"
                  android:screenOrientation="landscape"/>
    </application>
</manifest>
